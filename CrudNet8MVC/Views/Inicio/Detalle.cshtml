@model CrudNet8MVC.Models.Contacto

@{
    ViewData["Title"] = "Detalle de Contacto";
}

<h1 class="text-center">Editar contacto</h1>

<div class="row mb-3 d-flex justify-content-between">
    <div class="col-auto">
        <a asp-action="Index" asp-controller="Inicio" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left mr-2"></i> Regresar
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Usuario: @Html.DisplayFor(m => m.Nombre)</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Oficio: </strong>@Html.DisplayFor(m => m.Oficio)</li>
                    <li class="list-group-item"><strong>Teléfono: </strong>@Html.DisplayFor(m => m.Telefono)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Fecha de Creación: </strong>@Html.DisplayFor(m => m.FechaCreacion)</li>
                </ul>
            </div>
        </div>
    </div>
</div>

